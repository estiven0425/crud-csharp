<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:vm="clr-namespace:crud_csharp.ViewModels"
                    xmlns:views="clr-namespace:crud_csharp.Views"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate DataType="{x:Type vm:MainViewModel}">
        <views:MainView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:BooksViewModel}">
        <views:BooksView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:NewBookViewModel}">
        <views:NewBookView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:BookViewModel}">
        <views:BookView/>
    </DataTemplate>
</ResourceDictionary>