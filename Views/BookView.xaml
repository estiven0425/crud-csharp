<UserControl d:DesignHeight="Auto" d:DesignWidth="800"
             mc:Ignorable="d"
             x:Class="crud_csharp.Views.BookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">
        <Grid Margin="10"
              HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid ColumnSpan="2"
                  Grid.Column="0"
                  Grid.Row="0"
                  HorizontalAlignment="Stretch"
                  Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Grid.Row="0"
                           Margin="0,0,0,10"
                           Text="Book info"
                           TextAlignment="Center"/>

                <Label Content="Title:"
                       Grid.Column="0"
                       Grid.Row="1"/>
                <TextBlock Grid.Column="1"
                           Grid.Row="1"
                           Margin="0,10,0,0"
                           Text="{Binding SelectedBook.Title}"/>
                <Label Content="Country:"
                       Grid.Column="0"
                       Grid.Row="2"/>
                <TextBlock Grid.Column="1"
                           Grid.Row="2"
                           Margin="0,10,0,0"
                           Text="{Binding SelectedBook.Country}"/>
                <Label Content="Genre:"
                       Grid.Column="0"
                       Grid.Row="3"/>
                <TextBlock Grid.Column="1"
                           Grid.Row="3"
                           Margin="0,10,0,0"
                           Text="{Binding SelectedBook.Genre.Name}"/>
                <Label Content="Author:"
                       Grid.Column="0"
                       Grid.Row="4"/>
                <TextBlock Grid.Column="1"
                           Grid.Row="4"
                           Margin="0,10,0,0"
                           Text="{Binding SelectedBook.Author.Name}"/>
                <Label Content="Price:"
                       Grid.Column="0"
                       Grid.Row="5"/>
                <TextBlock Grid.Column="1"
                           Grid.Row="5"
                           Margin="0,10,0,0"
                           Text="{Binding SelectedBook.Price}"/>
                <Label Content="Stock:"
                       Grid.Column="0"
                       Grid.Row="6"/>
                <TextBlock Grid.Column="1"
                           Grid.Row="6"
                           Margin="0,10,0,0"
                           Text="{Binding SelectedBook.Stock}"/>
                <Label Content="Status:"
                       Grid.Column="0"
                       Grid.Row="7"/>
                <TextBlock Grid.Column="1"
                           Grid.Row="7"
                           Margin="0,10,0,0"
                           Text="{Binding SelectedBook.Status}"/>
            </Grid>
            <Grid Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Grid.Row="0"
                           Margin="0,0,0,10"
                           Text="Update book"
                           TextAlignment="Center"/>

                <Grid Grid.Column="0"
                      Grid.Row="1"
                      Grid.ColumnSpan="2"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Title:" Grid.Column="0"/>
                    <TextBox Grid.Column="1"
                             Height="30"
                             Text="{Binding SelectedBook.Title, UpdateSourceTrigger=Explicit}"/>
                </Grid>
                <Grid Grid.Column="0"
                      Grid.Row="2"
                      Grid.ColumnSpan="2"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Country:"
                           Grid.Column="0"
                           Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1"
                             Height="30"
                             Text="{Binding SelectedBook.Country, UpdateSourceTrigger=Explicit}"/>
                </Grid>
                <Grid Grid.Column="0"
                      Grid.Row="3"
                      Grid.ColumnSpan="2"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Genre:"
                           Grid.Column="0"
                           Margin="0,0,10,0"/>
                    <ComboBox DisplayMemberPath="Name"
                              Grid.Column="1"
                              Height="30"
                              ItemsSource="{Binding Genres}"
                              SelectedItem="{Binding SelectedBook.Genre}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedBook.Genre.Id}">
                    </ComboBox>
                </Grid>
                <Grid Grid.Column="0"
                      Grid.Row="4"
                      Grid.ColumnSpan="2"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Author:"
                           Grid.Column="0"
                           Margin="0,0,10,0"/>
                    <ComboBox DisplayMemberPath="Name"
                              Grid.Column="1"
                              Height="30"
                              ItemsSource="{Binding Authors}"
                              SelectedItem="{Binding SelectedBook.Author}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedBook.Author.Id}">
                    </ComboBox>
                </Grid>
                <Grid Grid.Column="0"
                      Grid.Row="5"
                      Grid.ColumnSpan="2"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Price:"
                           Grid.Column="0"
                           Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1"
                             Height="30"
                             Text="{Binding SelectedBook.Price, UpdateSourceTrigger=Explicit}"/>
                </Grid>
                <Grid Grid.Column="0"
                      Grid.Row="6"
                      Grid.ColumnSpan="2"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Stock:"
                           Grid.Column="0"
                           Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1"
                             Height="30"
                             Text="{Binding SelectedBook.Stock, UpdateSourceTrigger=Explicit}"/>
                </Grid>
                <Button Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="7"
                        Content="Update book"
                        Command="{Binding UpdateBookCommand}"
                        CommandParameter="{Binding SelectedBook}"/>
            </Grid>
            <Grid Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  HorizontalAlignment="Stretch"
                  Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Grid.Row="0"
                           Margin="0,0,0,10"
                           Text="Restock"
                           TextAlignment="Center"/>

                <Grid Grid.Column="0"
                      Grid.Row="1"
                      Grid.ColumnSpan="2"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Amount:"
                           Grid.Column="0"
                           Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1"
                             Height="30"
                             Text="{Binding StockAmount, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                <Button Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="2"
                        Content="Restock book"
                        Command="{Binding RestockBookCommand}"
                        CommandParameter="{Binding CurrentStockRequest}"/>
            </Grid>
            <Grid Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="3"
                  HorizontalAlignment="Stretch"
                  Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Grid.Row="0"
                           Margin="0,0,0,10"
                           Text="Sell"
                           TextAlignment="Center"/>

                <Grid Grid.Column="0"
                      Grid.Row="1"
                      Grid.ColumnSpan="2"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Amount:"
                           Grid.Column="0"
                           Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1"
                             Height="30"
                             Text="{Binding SellAmount, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                <Button Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="2"
                        Content="Sell books"
                        Command="{Binding SellBookCommand}"
                        CommandParameter="{Binding CurrentSellRequest}"/>
            </Grid>
            <Grid Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="4"
                  HorizontalAlignment="Stretch"
                  Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Margin="0,0,0,10"
                           Text="Delete Book"
                           TextAlignment="Center"/>
                <Button Grid.Row="1"
                        Content="Delete book"
                        Command="{Binding DeleteBookCommand}"
                        CommandParameter="{Binding SelectedBook}"/>
            </Grid>
            <Grid Grid.Column="0"
                  Grid.Row="5"
                  Grid.ColumnSpan="2"
                  Margin="0,0,0,10">
                <TextBlock Text="{Binding ErrorMessage}"/>
            </Grid>
            <Button Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="6"
                    Content="Back"
                    Command="{Binding NavigationBooksCommand}"/>
        </Grid>
    </ScrollViewer>
</UserControl>
