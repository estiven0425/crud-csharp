<UserControl d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d"
             x:Class="crud_csharp.Views.NewBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0"
              Grid.Row="0"
              Grid.ColumnSpan="2"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Title:" Grid.Column="0"/>
            <TextBox Grid.Column="1"
                     Height="30"
                     Text="{Binding Book.Title, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        <Grid Grid.Column="0"
              Grid.Row="1"
              Grid.ColumnSpan="2"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Country:"
                   Grid.Column="0"
                   Margin="0,0,10,0"/>
            <TextBox Grid.Column="1"
                     Height="30"
                     Text="{Binding Book.Country, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        <Grid Grid.Column="0"
              Grid.Row="2"
              Grid.ColumnSpan="2"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Genre:"
                   Grid.Column="0"
                   Margin="0,0,10,0"/>
            <ComboBox DisplayMemberPath="Name"
                      Grid.Column="1"
                      Height="30"
                      ItemsSource="{Binding Genres}"
                      SelectedItem="{Binding Book.Genre}">
            </ComboBox>
        </Grid>
        <Grid Grid.Column="0"
              Grid.Row="3"
              Grid.ColumnSpan="2"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Author:"
                   Grid.Column="0"
                   Margin="0,0,10,0"/>
            <ComboBox DisplayMemberPath="Name"
                      Grid.Column="1"
                      Height="30"
                      ItemsSource="{Binding Authors}"
                      SelectedItem="{Binding Book.Author}">
            </ComboBox>
        </Grid>
        <Grid Grid.Column="0"
              Grid.Row="4"
              Grid.ColumnSpan="2"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Price:"
                   Grid.Column="0"
                   Margin="0,0,10,0"/>
            <TextBox Grid.Column="1"
                     Height="30"
                     Text="{Binding Book.Price, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        <Grid Grid.Column="0"
              Grid.Row="5"
              Grid.ColumnSpan="2"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Stock:"
                   Grid.Column="0"
                   Margin="0,0,10,0"/>
            <TextBox Grid.Column="1"
                     Height="30"
                     Text="{Binding Book.Stock, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        <Grid Grid.Column="0"
              Grid.Row="6"
              Grid.ColumnSpan="2"
              Margin="0,0,0,10">
            <TextBlock Text="{Binding ErrorMessage}"/>
        </Grid>
        <Button Grid.Column="0"
                Grid.Row="7"
                Content="Back"
                Command="{Binding NavigationBooksCommand}"
                Margin="0,0,5,0"/>
        <Button Grid.Column="1"
                Grid.Row="7"
                Content="Add book"
                Command="{Binding AddBookCommand}"
                Margin="5,0,0,0"/>
    </Grid>
</UserControl>
